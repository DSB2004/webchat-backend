generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auth {
  id         String  @id @default(uuid())
  email      String  @unique
  password   String
  isVerified Boolean @default(false)
  user       User?
}

model User {
  id       String @id @default(uuid())
  username String
  email    String @unique
  authId   String @unique
  auth     Auth   @relation(fields: [authId], references: [id])
}
