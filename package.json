{
  "name": "webchat-backend",
  "private": true,
  "scripts": {
    "start": "turbo run start",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start:dev": "turbo run start:dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "turbo run db:generate --filter=@webchat-backend/db",
    "db:migrate-dev": "turbo run db:migrate-dev --filter=@webchat-backend/db",
    "db:migrate-deploy": "turbo run db:migrate-deploy --filter=@webchat-backend/db",
    "db:push": "turbo run db:push --filter=@webchat-backend/db",
    "db:studio": "turbo run db:studio --filter=@webchat-backend/db"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
